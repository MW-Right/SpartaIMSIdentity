@model IEnumerable<SpartaIMS_Database.Models.Cohort>
@using System.Diagnostics;

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CohortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CohortNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CohortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CohortNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CohortID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CohortID">Details</a> |
                @{ 
                    try
                    {
                        if (!(item.SpartanUsers.Count() >= 0))
                        {
                            <a asp-action="Delete" ifp-route-id="@item.CohortID"></a>
                        }

                    }
                    catch (ArgumentNullException)
                    {
                            <a asp-action="Delete/@item.CohortID">Delete</a>
                    }

                }
                

            </td>
        </tr>
                    }
    </tbody>
</table>
