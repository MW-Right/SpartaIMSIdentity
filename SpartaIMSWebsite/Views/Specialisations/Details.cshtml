@model SpartaIMS_Database.Models.Specialisation

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Specialisation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SpecName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SpecName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cohorts)
        </dt>
        @foreach (var cohort in Model.Cohorts)
        {

            <dd>
                @cohort.CohortName
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SpecID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
