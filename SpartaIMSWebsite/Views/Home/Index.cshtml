@{
    ViewData["Title"] = "Home Page";
}
<head>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    <style>
        .img-responsive {
            height: 100%;
            vertical-align: middle !important;
            margin: auto;
        }

        #myCarousel {
            justify-content: center !important;
            height: 30em;
            overflow: hidden !important;
        }

        .carousel-inner {
            background-color: #090818;
        }

        .wall-image {
            transform: translateY(-260px);
        }
    </style>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/banner-1.png" alt="talent team" class="img-responsive wall-image" />
            </div>
            <div class="item">
                <img src="~/images/Banner-2.jpg" alt="get into tech" class="img-responsive" />
            </div>
            <div class="item">
                <img src="~/images/banner-3.jpg" alt="start your adventure" class="img-responsive" />
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon-chevron-left fas fa-chevron-circle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon-chevron-right fas fa-chevron-circle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Sparta Global</h2>
            <ul>
                <li>Sample pages using ASP.NET Core MVC</li>
                <li>Theming using <a href="https://go.microsoft.com/fwlink/?LinkID=398939">Bootstrap</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>About the App</h2>
            <ul>
                <li><a href="https://go.microsoft.com/fwlink/?LinkID=398600">Add a Controller and View</a></li>
                <li><a href="https://go.microsoft.com/fwlink/?LinkId=699315">Manage User Secrets using Secret Manager.</a></li>
                <li><a href="https://go.microsoft.com/fwlink/?LinkId=699316">Use logging to log a message.</a></li>
                <li><a href="https://go.microsoft.com/fwlink/?LinkId=699317">Add packages using NuGet.</a></li>
                <li><a href="https://go.microsoft.com/fwlink/?LinkId=699319">Target development, staging or production environment.</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Social Links</h2>
            <a class="twitter-timeline" data-height="400" href="https://twitter.com/SpartaGlobal?ref_src=twsrc%5Etfw">Tweets by SpartaGlobal</a>
        </div>
    </div>
</body>